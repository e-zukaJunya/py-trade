{
    "customizations": {
        "vscode": {
            "extensions": [
                // python
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "charliermarsh.ruff",
                "visualstudioexptteam.vscodeintellicode",
                "tamasfe.even-better-toml",
                "esbenp.prettier-vscode",

                // markdown
                "yzhang.markdown-all-in-one",

                // その他便利ツール
                "oderwat.indent-rainbow",
                "ryu1kn.partial-diff",
                "alefragnani.bookmarks",
                "christian-kohler.path-intellisense",
                "wmaurer.change-case"
            ]
        }
    },
    // 使用するcompose fileの指定
    "dockerComposeFile": ["../docker-compose.yml"],
    // compose fileの中のどのサービスを使用するか
    "service": "python",
    // アタッチした際、コンテナ内のどこをカレントディレクトリとするか
    "workspaceFolder": "/app"
}
